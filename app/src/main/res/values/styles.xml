<resources>
    <!-- Base application theme. -->


    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:fontFamily">@font/product</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.Material3Expressive.DynamicColors.DayNight">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/product</item>
        <item name="android:fontFamily">@font/product</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowBackground">@color/bg</item>


        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo_animation</item>
        <item name="android:windowSplashScreenAnimationDuration">2000</item>

        <item name="android:windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/bg</item>
        <item name="colorOnBackground">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/secondary</item>
        <item name="android:textColorTertiary">@color/tertiary</item>
        <item name="dokiPrimaryTextColor">@color/primary</item>
        <item name="dokiSecondaryTextColor">@color/secondary</item>
        <item name="dokiBackgroundColor">@color/bg</item>
        <item name="dokiDividerColor">@color/bg</item>
        <item name="dokiButtonsTextColor">@color/primary</item>
        <item name="dokiActiveIconsColor">@color/primary</item>
        <item name="dokiHeaderBackgroundColor">@color/bg</item>
        <item name="dokiInactiveIconsColor">@color/tertiary</item>
<!--        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>-->

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/product</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:fontFamily">@font/product</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:fontFamily">@font/product</item>
    </style>


    <style name="Widget.MyApp.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MyApp.Toolbar</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="ThemeOverlay.MyApp.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="popupTheme">@style/ThemeOverlay.MyApp.PopupTheme</item>
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="ThemeOverlay.MyApp.PopupTheme" parent="">
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="Doki.Custom.Headline" parent="Doki.Headline">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/bg</item>
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="Doki.Custom.Overline" parent="Doki.Overline">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/bg</item>
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="Doki.Custom.Button" parent="Doki.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@color/bg</item>
        <item name="android:fontFamily">@font/product</item>
    </style>


    <style name="ExtendedFab" parent="@style/Widget.Material3Expressive.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:lines">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="backgroundTint">?android:attr/colorPrimary</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="cornerRadius">36dp</item>
        <item name="layout_behavior">com.urbandroid.sleep.gui.fab.FloatingMaterialButtonBehavior</item>
        <item name="iconTint">?android:attr/textColorPrimaryInverse</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="layout_anchorGravity">top|center</item>
        <item name="android:fontFamily">@font/product</item>
    </style>
    <style name="FullWidthExpandedToolbarStyle" parent="@style/TextAppearance.Material3.DisplayMedium">
        <item name="android:fontFamily">@font/product</item>
    </style>

    <style name="toolbar">
        <item name="android:fontFamily">@font/product</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>


</resources>